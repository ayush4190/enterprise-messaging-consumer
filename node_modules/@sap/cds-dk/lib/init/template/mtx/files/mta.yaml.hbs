---
modules:
  - name: {{cap.appName}}-srv
    type: {{cap.pLanguage}}
    path: {{& cap.srv.path}}
{{#cap.isNodejs}}
    properties:
      SUBSCRIPTION_URL: ${protocol}://\${tenant_subdomain}-${default-uri}
      SUBSCRIPTION_URL_REPLACEMENT_RULES: [['-srv', '']]
{{/cap.isNodejs}}
    requires:
      - name: {{cap.appName}}-registry
{{#cap.isJava}}
      - name: mtx-sidecar
        properties:
          CDS_MULTITENANCY_SIDECAR_URL: ~{url}
{{/cap.isJava}}
    provides:
      - name: srv-api # required by consumers of CAP services (e.g. approuter)
        properties:
          srv-url: ${default-url}
{{#cap.isNodejs}}
      - name: mtx-api # potentially required by approuter
        properties:
          mtx-url: ${default-url}
{{/cap.isNodejs}}

{{#cap.isJava}}
  - name: {{cap.appName}}-mtx-sidecar
    type: nodejs
    path: mtx-sidecar
    parameters:
      memory: 256M
      disk-quota: 512M
    requires:
      - name: {{cap.appName}}-db
      - name: {{cap.appName}}-auth
    provides:
      - name: mtx-sidecar
        properties:
          url: ${default-url}
{{/cap.isJava}}

resources:
  - name: {{cap.appName}}-registry
    type: org.cloudfoundry.managed-service
    requires:
{{#cap.isNodejs}}
      - name: mtx-api
{{/cap.isNodejs}}
{{#cap.isJava}}
      - name: srv-api
{{/cap.isJava}}
    parameters:
      service: saas-registry
      service-plan: application
      config:
        xsappname: {{cap.appName}}-${org}-${space}
        appName: {{cap.appName}}-${org}-${space}
        displayName: {{cap.appName}}
        description: A simple CAP project.
        category: 'Category'
        appUrls:
{{#cap.isNodejs}}
          getDependencies: ~{mtx-api/mtx-url}/mtx/v1/provisioning/dependencies
          onSubscription: ~{mtx-api/mtx-url}/mtx/v1/provisioning/tenant/{tenantId}
{{/cap.isNodejs}}
{{#cap.isJava}}
          getDependencies: ~{srv-api/srv-url}/mt/v1.0/subscriptions/dependencies
          onSubscription: ~{srv-api/srv-url}/mt/v1.0/subscriptions/tenants/{tenantId}
{{/cap.isJava}}
          onSubscriptionAsync: false
          onUnSubscriptionAsync: false
          callbackTimeoutMillis: 300000
